---
import Image from "astro/components/Image.astro";

interface Props {
  title: string;
  description: string[];
  subtitle: string;
  btn: btn;
  bgImage: ImageMetadata;
}

interface btn {
  text: string;
  link: string;
}

const { title, description, subtitle, btn, bgImage } = Astro.props;
---

<div
  class="d-flex justify-content-center align-items-center w-100 vh-100 p-5 position-relative"
>
  <Image
    src={bgImage}
    alt={title}
    class="d-block w-100 opacity-25 object-fit-cover vh-100 position-absolute top-0 left-0 z-n1"
  />
  <div
    class="bg-secondary d-block w-100 opacity-25 object-fit-cover vh-100 position-absolute top-0 left-0 z-n1"
  >
  </div>

  <div
    class="container card d-flex flex-column justify-content-start align-items-center text-center position-relative p-3 p-lg-4"
    style="background: rgba(18, 18, 18, 0.6); z-index: 1;"
  >
    <h1 class="card-title ">{title}</h1>
    <h5 class="card-subtitle">{subtitle}</h5>
    <hr class="w-50" />
    {description.map((paragraph) => <p class="card-text">{paragraph}</p>)}
    <a href={btn.link} class="btn btn-primary mt-3">{btn.text}</a>
  </div>
</div>
