---
import Image from "astro/components/Image.astro";
import FormController from "../components/form/FormComponents.astro";

import BgImage from "../layouts/BgImage.astro";

import bgImage from "../assets/image/fondoForm.jpg";
import map from "../assets/image/ubicaccion.png";

interface form {
    type: 'text' | 'password' | 'email' | 'number' | 'tel' | 'url';
    name: string;
    placeholder: string;
    label: string;
    required: boolean;
}

const form: form[] = [
    {
        type: 'text',
        name: 'name',
        placeholder: 'Nombre',
        label: 'Nombre',
        required: true
    },
    {
        type: 'email',
        name: 'email',
        placeholder: 'Correo electrónico',
        label: 'Correo electrónico',
        required: true
    },
    {
        type: 'tel',
        name: 'phone',
        placeholder: 'Teléfono',
        label: 'Teléfono',
        required: true
    },
    {
        type: 'text',
        name: 'subject',
        placeholder: 'Asunto',
        label: 'Asunto',
        required: true
    },
    {
        type: 'text',
        name: 'message',
        placeholder: 'Mensaje',
        label: 'Mensaje',
        required: true
    }
]

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<BgImage bgImage={bgImage}>
  <div class="container py-md-5">
    <div class="row mt-md-5">
        <div class="col-lg-5 bg-dark p-5 opacity-75 rounded-2">
            <h1 class="text-center">¡Contáctanos!</h1>
            <hr>
            <p>Nos encontramos en un espacio moderno y equipado en el corazón de la ciudad. Ven a entrenar con nosotros o contáctanos si necesitas más información. ¡Estamos aquí para ayudarte a alcanzar tus metas!</p>
            <ul class="list-unstyled fw-bold">
                <li>Calle Gran Vía, 45, 28013 Madrid, España</li>
                <li>(+34) 910 123 456</li>
                <li>fightclub@clubdeportivo.com</li>
            </ul>
            <hr>
            <Image src={map} alt="Ubicación" class="img-fluid rounded-2" />
        </div>
        <div class="col-lg-1 mb-3"></div>
        <div class="col-lg-6 bg-dark p-5 opacity-75 rounded-2">
            <h1 class="text-center">Formulario de contacto</h1>
            <hr>
            <FormController form={form} />
        </div>
    </div>
  </div>
</BgImage>
