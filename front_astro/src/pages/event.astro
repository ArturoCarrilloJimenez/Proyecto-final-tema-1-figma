---
import BgImage from "../layouts/BgImage.astro";
import EventCard from "../components/cards/EventCard.astro";

import bgImage from "../assets/image/eventos.jpg";
import event1 from "../assets/image/evento1.jpg";
import event2 from "../assets/image/evento2.jpg";
import event3 from "../assets/image/evento3.jpg";
import event4 from "../assets/image/evento4.jpg";

const events = [
  {
    title: "¡Prepárate para la Pelea del Año!",
    subtitle: 'Carlos "El Tigre" Sánchez 🐯 vs Miguel "El Rayo" Hernández ⚡',
    description: "🔥 ¿Estás listo para vivir la acción en primera fila? 🔥",
    link: "/#",
    bgImage: event1,
  },
  {
    title: "¡El combate definitivo está aquí!",
    subtitle:
      'Javier "El Gladiador" Torres 🛡️ vs David "El Destructor" Gómez 💥',
    description:
      "⚔️ ¿Estás listo para presenciar la batalla más intensa del año? ⚔️",
    link: "/#",
    bgImage: event2,
  },
  {
    title: "¡Llega el Torneo K1 que hará temblar la arena!",
    subtitle: 'Ana "La Tormenta" Pérez 🌩️ vs Laura "La Bestia" Ramírez 🐾',
    description:
      "💥 Solo una saldrá victoriosa... ¿Estás listo para ser testigo? 💥",
    link: "/#",
    bgImage: event3,
  },
  {
    title: "¡El momento que todos esperaban ha llegado!",
    subtitle: 'Pedro "La Roca" Díaz 🪨 vs Juan "El Huracán" Martínez 🌪️',
    description:
      "🔥 La fuerza de la roca contra la furia del huracán... ¿Quién triunfará? 🔥",
    link: "/#",
    bgImage: event4,
  },
];
---

<BgImage bgImage={bgImage}>
  <div class="py-md-5">
    <div class="row justify-content-center mt-md-5">
      {
        events.map((item) => {
          return (
            <div class="col-12 col-lg-6 col-xl-4 mb-4">
              <EventCard
                title={item.title}
                subtitle={item.subtitle}
                description={item.description}
                link={item.link}
                bgImage={item.bgImage}
              />
            </div>
          );
        })
      }
    </div>
  </div>
</BgImage>
